@page
@model rdyjeanrazorpages.Pages.Jane.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Sad Music</h1>

<p>
    <a asp-page="Song">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Song)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].tagalog Sad songs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].English Sad Song)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].About)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Class) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
